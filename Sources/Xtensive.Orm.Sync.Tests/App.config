<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="Xtensive.Orm" type="Xtensive.Orm.Configuration.Elements.ConfigurationSection, Xtensive.Orm" />
    <section name="Xtensive.Diagnostics" type="Xtensive.Diagnostics.Configuration.ConfigurationSection, Xtensive.Core"/>
  </configSections>
  <Xtensive.Orm>
    <domains>
      <domain name="local" upgradeMode="Recreate" provider="sqlserver"
              connectionString="Data Source=localhost\SQLExpress;Initial Catalog=DO-Tests-1;Integrated Security=True;MultipleActiveResultSets=True">
        <types>
          <add assembly="Xtensive.Orm.Sync" />
          <add assembly="Xtensive.Orm.Sync.Tests" />
          <add assembly="Xtensive.Orm.Tracking" />
        </types>
      </domain>
      <domain name="remote" upgradeMode="Recreate" provider="sqlserver"
              connectionString="Data Source=localhost\SQLExpress;Initial Catalog=DO-Tests-2;Integrated Security=True;MultipleActiveResultSets=True">
        <types>
          <add assembly="Xtensive.Orm.Sync" />
          <add assembly="Xtensive.Orm.Sync.Tests" />
          <add assembly="Xtensive.Orm.Tracking" />
        </types>
      </domain>
    </domains>
  </Xtensive.Orm>
  <Xtensive.Diagnostics>
    <logs>
      <!--
      <log name=""                      events="All"   provider="DebugOnlyConsole" format="Comprehensive" />
      <log name=""                      events="Error" provider="DebugOnlyConsole" format="Comprehensive" />
      <log name="Diagnostics"      events="Info"  provider="DebugOnlyConsole" format="Comprehensive" />
      <log name="Orm"               events="All"   provider="DebugOnlyConsole" format="Comprehensive" />
      -->
      <log name="Storage.Providers.Sql" events="All"   provider="Console" format="Comprehensive" />
    </logs>
  </Xtensive.Diagnostics>
</configuration>