<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="Xtensive.Orm" type="Xtensive.Orm.Configuration.Elements.ConfigurationSection, Xtensive.Orm"/>
    <section name="Xtensive.Diagnostics" type="Xtensive.Diagnostics.Configuration.ConfigurationSection, Xtensive.Core"/>
    <section name="Xtensive.Orm.Localization" type="Xtensive.Orm.Localization.Configuration.ConfigurationSection, Xtensive.Orm.Localization"/>
  </configSections>
  <Xtensive.Orm>
    <domains>
      <domain name="Default"
              upgradeMode="Recreate" 
              provider="sqlserver"
              connectionString="Data Source=localhost\SQLExpress;Initial Catalog=Tests;Integrated Security=True;MultipleActiveResultSets=True">
      <!--
      <domain name="Default"
              upgradeMode="Recreate" 
              provider="sqlserverce"
              connectionString="Data Source=.\DO40-Test.sdf">
      <domain name="Default"
              upgradeMode="Recreate" 
              provider="postgresql"
              connectionString="HOST=127.0.0.1;DATABASE=do40test;USER ID=@username;PASSWORD=@password">
      <domain name="Default"
              provider="oracle"
              connectionString="DATA SOURCE=&quot;(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=5511))(CONNECT_DATA=(SERVICE_NAME=oracle)))&quot;;USER ID=@username;PASSWORD=@password"
              upgradeMode="Recreate">              
      -->
        <types>
          <add assembly="Xtensive.Orm.Localization.Tests"/>
          <add assembly="Xtensive.Orm.Localization"/>
        </types>
      </domain>
    </domains>
  </Xtensive.Orm>
  <Xtensive.Diagnostics>
    <logs>
      <!--
      <log name=""                      events="All"   provider="DebugOnlyConsole" format="Comprehensive" />
      <log name=""                      events="Error" provider="DebugOnlyConsole" format="Comprehensive" />
      <log name="Diagnostics"      events="Info"  provider="DebugOnlyConsole" format="Comprehensive" />
      <log name="Orm"               events="All"   provider="DebugOnlyConsole" format="Comprehensive" />
      -->
      <log name="Storage.Providers.Sql" events="All"   provider="Console" format="Comprehensive" />
    </logs>
  </Xtensive.Diagnostics>
  <Xtensive.Orm.Localization>
    <defaultCulture name="es-ES"/>
  </Xtensive.Orm.Localization>
  <startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
